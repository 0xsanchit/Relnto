<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LendHomeActivity">
    
    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Add new Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/books"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books" />

        <ImageView
            android:id="@+id/sports"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sports" />


        <ImageView
            android:id="@+id/mobiles"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/mobiles" />

        <ImageView
            android:id="@+id/laptops"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/laptops" />





    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bags"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags" />

        <ImageView
            android:id="@+id/watches"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/watches" />


        <ImageView
            android:id="@+id/tshirts"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/tshirts" />

        <ImageView
            android:id="@+id/camera"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/select_product_image" />





    </LinearLayout>



    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/shoess" />

        <!--<ImageView
            android:id="@+id/books10"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books" />


        <ImageView
            android:id="@+id/books11"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books" />

        <ImageView
            android:id="@+id/books12"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/books" /> -->





    </LinearLayout>

</RelativeLayout>