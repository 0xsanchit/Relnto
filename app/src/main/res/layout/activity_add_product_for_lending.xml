<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductForLending">
    
    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:id="@+id/select_product_image"
        android:cropToPadding="false"
        android:scaleType="fitCenter"
        android:src="@drawable/select_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/product_name"
    android:layout_below="@+id/select_product_image"
    android:inputType="textMultiLine"
    android:layout_marginTop="20dp"
    android:padding="6dp"
    android:hint="Product Name .."
    android:layout_marginLeft="45dp"
    android:layout_marginRight="45dp"
    android:background="@drawable/input_design"
    />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_description"
        android:layout_below="@+id/product_name"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:hint="Product Description .."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_price"
        android:layout_below="@+id/product_description"
        android:inputType="numberDecimal"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:hint="Product Price .."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_brand"
        android:layout_below="@+id/product_price"
        android:inputType="textMultiLine"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:hint="Product Brand .."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/your_phone"
        android:layout_below="@+id/product_brand"
        android:inputType="phone"
        android:layout_marginTop="6dp"
        android:padding="6dp"
        android:hint="Your Phone Number .."
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        />

    <EditText
        android:id="@+id/Room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/your_phone"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/input_design"
        android:hint="Room Number ... "
        android:inputType="number"
        android:padding="6dp" />

    <Spinner
        android:id="@+id/hostel_lending"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:prompt="@string/hostel"
        android:layout_below="@+id/Room"
        android:spinnerMode="dropdown">

    </Spinner>

    <CheckBox
        android:id="@+id/tc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hostel_lending"
        android:text="I agree to the Terms and Conditions "
        android:layout_margin="6dp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add-new-product"
        android:layout_below="@+id/tc"
        android:text="Add Product"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="17dp"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:background="@drawable/buttons"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="You will have to pay 15% of the total amount towards handling and convenience charges "
        android:layout_margin="15dp"/>



</RelativeLayout>